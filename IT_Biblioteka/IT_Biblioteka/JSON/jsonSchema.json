{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "DiskografijosScrema",
  "definitions": {
    "autoriai": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "a[0-9][0-9]*",
            "uniqueItems": true
          },
          "vardas": {
            "type": "string"
          },
          "pavarde": {
            "type": "string",
            "pattern": "[A-Z].+"
          },
          "gimimoMetai": {
            "type": "string",
            "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{4}$"
          },
          "mirtiesMetai": {
            "type": "string",
            "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{4}$"
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "Diskografija": {
      "type": "object",
      "properties": {
        "autoriai": {
          "$ref": "#/definitions/autoriai"
        },
        "albumai": {
          "type": "object",
          "properties": {
            "zanras": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "stilius": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  },
                  "albumas": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "numeris": {
                          "type": "number"
                        },
                        "pavadinimas": {
                          "type": "string"
                        },
                        "autorius": {
                          "type": "object",
                          "properties": {
                            "ref": {
                              "type": "string",
                              "pattern": "a[0-9][0-9]*",
                              "uniqueItems": true
                            }
                          }
                        },
                        "isleidimoMetai": {
                          "type": "integer"
                        },
                        "kaina": {
                          "type": "number"
                        },
                        "busena": {
                          "type": "string",
                          "enum": [
                            "Neperklausyta",
                            "Perklausyta"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}